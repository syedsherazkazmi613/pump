    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script>
        // Set up Three.js scene
        const scene = new THREE.Scene();
        const container = document.getElementById('computer-container');

        // Create responsive camera
        const camera = new THREE.PerspectiveCamera(75, container.offsetWidth / container.offsetHeight, 0.1, 1000);
        
        const renderer = new THREE.WebGLRenderer({
            canvas: document.getElementById('computer3d'),
            alpha: true,
            antialias: true
        });
        renderer.setSize(container.offsetWidth, container.offsetHeight);
        renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));

        // Create floating crystal display
        const crystalGroup = new THREE.Group();
        scene.add(crystalGroup);

        // Adjust crystal size based on screen width
        const isMobile = window.innerWidth < 768;
        const crystalScale = isMobile ? 0.9 : 1; // Increased mobile scale to 0.9

        // Create main crystal structure with adjusted size and increased transmission
        const crystalGeometry = new THREE.OctahedronGeometry(8 * crystalScale, 0);
        const crystalMaterial = new THREE.MeshPhysicalMaterial({
            color: 0x4B0082,
            metalness: 0.2,
            roughness: 0.05, // Reduced roughness for more shine
            transmission: 0.95, // Increased transmission
            thickness: 0.3, // Reduced thickness for more light passage
            envMapIntensity: 2, // Increased environment map intensity
            clearcoat: 1.5, // Increased clearcoat
            clearcoatRoughness: 0.05,
            transparent: true,
            opacity: 0.8
        });
        const crystal = new THREE.Mesh(crystalGeometry, crystalMaterial);
        crystalGroup.add(crystal);

        // Create inner energy core with increased emission
        const coreGeometry = new THREE.IcosahedronGeometry(3 * crystalScale, 0);
        const coreMaterial = new THREE.MeshPhongMaterial({
            color: 0x9400D3,
            emissive: 0x9400D3,
            emissiveIntensity: 1.2, // Increased emission
            transparent: true,
            opacity: 0.9
        });
        const core = new THREE.Mesh(coreGeometry, coreMaterial);
        crystal.add(core);

        // Add more intense floating energy particles
        const particleGeometry = new THREE.TetrahedronGeometry(0.35 * crystalScale);
        const particleMaterial = new THREE.MeshPhongMaterial({
            color: 0x8A2BE2,
            emissive: 0x8A2BE2,
            emissiveIntensity: 1.5, // Increased emission
            transparent: true,
            opacity: 0.9
        });

        const particleRadius = 7 * crystalScale;
        for (let i = 0; i < 12; i++) {
            const particle = new THREE.Mesh(particleGeometry, particleMaterial);
            const angle = (i / 12) * Math.PI * 2;
            particle.position.x = Math.cos(angle) * particleRadius;
            particle.position.z = Math.sin(angle) * particleRadius;
            particle.userData.angle = angle;
            particle.userData.radius = particleRadius;
            particle.userData.yOffset = Math.random() * Math.PI * 2;
            crystalGroup.add(particle);
        }

        // Create brighter energy rings
        const ringGeometry = new THREE.TorusGeometry(11 * crystalScale, 0.15 * crystalScale, 16, 100);
        const ringMaterial = new THREE.MeshPhongMaterial({
            color: 0x9932CC,
            emissive: 0x9932CC,
            emissiveIntensity: 0.8, // Increased emission
            transparent: true,
            opacity: 0.4
        });

        for (let i = 0; i < 3; i++) {
            const ring = new THREE.Mesh(ringGeometry, ringMaterial);
            ring.rotation.x = Math.PI / 3 * i;
            crystalGroup.add(ring);
        }

        // Enhanced ethereal lighting setup
        const mainLight = new THREE.DirectionalLight(0x9370DB, 1.5); // Increased intensity
        mainLight.position.set(5, 5, 5);
        scene.add(mainLight);

        const backLight = new THREE.DirectionalLight(0x800080, 0.8); // Increased intensity
        backLight.position.set(-5, -5, -5);
        scene.add(backLight);

        const ambientLight = new THREE.AmbientLight(0x483D8B, 0.8); // Increased intensity
        scene.add(ambientLight);

        // Additional rim lights for enhanced glow
        const rimLight1 = new THREE.SpotLight(0xFF1493, 1);
        rimLight1.position.set(15, 0, 0);
        scene.add(rimLight1);

        const rimLight2 = new THREE.SpotLight(0x4B0082, 1);
        rimLight2.position.set(-15, 0, 0);
        scene.add(rimLight2);

        // Enhanced ethereal glow
        const glowRange = isMobile ? 25 : 25; // Increased range
        const glowLight1 = new THREE.PointLight(0x8B008B, 3, glowRange); // Increased intensity
        glowLight1.position.set(0, 0, 5);
        scene.add(glowLight1);

        const glowLight2 = new THREE.PointLight(0x4B0082, 3, glowRange); // Increased intensity
        glowLight2.position.set(0, 0, -5);
        scene.add(glowLight2);

        // Add volumetric lighting effect
        const volumetricLight = new THREE.PointLight(0xFFFFFF, 2, 30);
        volumetricLight.position.set(0, 10, 0);
        scene.add(volumetricLight);

        // Adjust camera position based on screen size
        camera.position.z = isMobile ? 20 : 20;

        // Mouse interaction variables
        let isDragging = false;
        let previousMousePosition = {
            x: 0,
            y: 0
        };

        // Touch sensitivity adjustment
        const touchSensitivity = isMobile ? 0.06 : 0.05;

        // Mouse and touch event handlers
        container.addEventListener('mousedown', startDragging);
        container.addEventListener('mousemove', drag);
        container.addEventListener('mouseup', stopDragging);
        container.addEventListener('mouseleave', stopDragging);
        container.addEventListener('touchstart', startDragging);
        container.addEventListener('touchmove', drag);
        container.addEventListener('touchend', stopDragging);

        function startDragging(e) {
            isDragging = true;
            if (e.type === 'mousedown') {
                previousMousePosition = {
                    x: e.clientX,
                    y: e.clientY
                };
            } else if (e.type === 'touchstart') {
                e.preventDefault();
                previousMousePosition = {
                    x: e.touches[0].clientX,
                    y: e.touches[0].clientY
                };
            }
        }

        function drag(e) {
            if (!isDragging) return;

            e.preventDefault();
            
            const currentPosition = {
                x: e.type === 'mousemove' ? e.clientX : e.touches[0].clientX,
                y: e.type === 'mousemove' ? e.clientY : e.touches[0].clientY
            };

            const deltaMove = {
                x: currentPosition.x - previousMousePosition.x,
                y: currentPosition.y - previousMousePosition.y
            };

            crystalGroup.rotation.y += deltaMove.x * touchSensitivity;
            crystalGroup.rotation.x += deltaMove.y * touchSensitivity;

            previousMousePosition = currentPosition;
        }

        function stopDragging() {
            isDragging = false;
        }

        // Enhanced animation with light movement
        function animate() {
            requestAnimationFrame(animate);
            
            if (!isDragging) {
                crystalGroup.position.y = Math.sin(Date.now() * 0.001) * (isMobile ? 0.45 : 0.5);
                crystalGroup.rotation.y += 0.002;
            }
            
            // Animate particles with enhanced glow
            crystalGroup.children.forEach(child => {
                if (child.geometry === particleGeometry) {
                    child.userData.angle += 0.01;
                    child.position.x = Math.cos(child.userData.angle) * child.userData.radius;
                    child.position.z = Math.sin(child.userData.angle) * child.userData.radius;
                    child.position.y = Math.sin(Date.now() * 0.002 + child.userData.yOffset) * (isMobile ? 2 : 2);
                    child.rotation.y += 0.02;
                    child.material.emissiveIntensity = 1 + Math.sin(Date.now() * 0.003) * 0.5;
                }
            });

            // Animate core with pulsing effect
            core.rotation.y += 0.01;
            core.rotation.z += 0.005;
            core.scale.setScalar(0.8 + Math.sin(Date.now() * 0.002) * (isMobile ? 0.3 : 0.3));
            
            // Animate volumetric light
            volumetricLight.intensity = 2 + Math.sin(Date.now() * 0.001) * 0.5;
            
            renderer.render(scene, camera);
        }

        // Enhanced responsive handling
        function handleResize() {
            const width = container.offsetWidth;
            const height = container.offsetHeight;
            
            camera.aspect = width / height;
            camera.updateProjectionMatrix();
            
            renderer.setSize(width, height);
            renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
        }

        window.addEventListener('resize', handleResize);
        window.addEventListener('orientationchange', handleResize);

        animate();
    </script>
